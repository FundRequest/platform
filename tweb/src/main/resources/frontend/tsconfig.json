{
  "compilerOptions": {
    "baseUrl": "./js",
    "target": "es5", //defines what sort of code ts generates, es5 because it"s what most browsers currently UNDERSTANDS.
    "module": "AMD",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom",
      "es5"
    ]
  }
}